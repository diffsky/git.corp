#!/bin/sh

MSG=$(head -1 $1)
# commit message format
if ! [[ $MSG =~ ^(feat|fix|chore|docs|style|refactor|test)(\([^\(^\)]+\))?:( ).* ]]; then
	echo "rejected: message format"
	echo "<type>[optional scope]: <description>"
	echo "   \`feat|fix|chore|docs|style|refactor|test"
	echo "see: conventionalcommits.org"
	exit 1
fi
# commit message length
if [[ ${#MSG} -gt 70 ]]; then
	echo "rejected: message length"
	echo "${MSG:0:70}..."
	exit 1
fi